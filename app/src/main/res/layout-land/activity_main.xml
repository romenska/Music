<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
android:visibility="gone"
        android:columnCount="3"
        android:rowCount="2"
        android:background="@color/white"
        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/imageButtonSheep"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/sheep" />

        <ImageView
            android:id="@+id/imageButtonCow"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/cow" />

        <ImageView
            android:id="@+id/imageButtonChicken"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/chicken" />
        <ImageView
            android:id="@+id/imageButtonDuck"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/duck" />

        <ImageView
            android:id="@+id/imageButtonCat"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/cat" />




        <ImageView
            android:id="@+id/imageButtonDog"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/dog" />

    </GridLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"

        android:layout_marginHorizontal="5dp"
        android:layout_marginBottom="5dp"
        android:clipToPadding="false"
        android:layout_alignParentTop="true"
        android:gravity="bottom"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/animal1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="14"
        android:src="@drawable/cartoon_pig"/>

        <ImageView
            android:id="@+id/animal2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="14"
            android:src="@drawable/cartoon_dog"/>

        <ImageView
            android:id="@+id/animal3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="14"
            android:src="@drawable/cartoon_duck"/>

        <ImageView
            android:id="@+id/animal4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="14"
            android:src="@drawable/cartoon_cow"/>
        <ImageView
            android:id="@+id/animal5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="14"
            android:src="@drawable/cartoon_checken"/>
        <ImageView
            android:id="@+id/animal6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="14"
            android:src="@drawable/cartoon_cat"/>
        <ImageView
            android:id="@+id/animal7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="14"
            android:src="@drawable/cartoon_sheep"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginBottom="5dp"
        android:clipToPadding="false"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

     <ImageButton
         android:id="@+id/button1"
         android:tag="0"
         android:layout_width="0dp"
         android:layout_height="match_parent"
         android:layout_weight="14"
         android:background="@drawable/key_red"
         />
     <ImageButton
         android:id="@+id/button2"
         android:tag="1"
         android:layout_width="0dp"
         android:layout_height="match_parent"
         android:layout_weight="14"
         android:background="@drawable/key_orange"
         />
     <ImageButton
         android:id="@+id/button3"
         android:tag="2"
         android:layout_width="0dp"
         android:layout_height="match_parent"
         android:layout_weight="14"
         android:background="@drawable/key_yellow"
     />
     <ImageButton
         android:id="@+id/button4"
         android:tag="3"
         android:layout_width="0dp"
         android:layout_height="match_parent"
         android:layout_weight="14"
         android:background="@drawable/key_green"

         />
     <ImageButton
         android:id="@+id/button5"
         android:tag="4"
         android:layout_width="0dp"
         android:layout_height="match_parent"
         android:layout_weight="14"
         android:background="@drawable/key_cyan"


         />
     <ImageButton
         android:id="@+id/button6"
         android:tag="5"
         android:layout_width="0dp"
         android:layout_height="match_parent"
         android:layout_weight="14"
         android:background="@drawable/key_blue"

         />
     <ImageButton
         android:id="@+id/button7"
         android:tag="6"
         android:layout_width="0dp"
         android:layout_height="match_parent"
         android:layout_weight="14"
         android:background="@drawable/key_violet"

         />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/sensorAnimal"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" />
    <LinearLayout
        android:id="@+id/sensor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginBottom="5dp"
       android:layout_alignParentBottom="true"
        android:orientation="horizontal" />
</RelativeLayout>
